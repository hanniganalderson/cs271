/**
 * Exclusive-or gate:
 * if ((a and Not(b)) or (Not(a) and b)) out = 1, else out = 0
 */
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    And(a=a, b=b, out=t1);
    Not(in=t1, out=t2);
    Or(a=a, b=b, out=t3);
    And(a=t3, b=t2, out=out);
}