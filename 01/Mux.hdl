/** 
 * Multiplexor:
 * if (sel = 0) out = a, else out = b
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;
    PARTS:
    Not(in=sel, out=t1);
    And(a=a, b=t1, out=t2);
    And(a=b, b=sel, out=t3);
    Or(a=t2, b=t3, out=out);
}